<Window x:Class="DesktopCS.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:converters="clr-namespace:DesktopCS.Converters"
        xmlns:viewModels="clr-namespace:DesktopCS.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DataContext="{d:DesignData viewModels:SettingsViewModel}"
        Title="Settings" Height="300" Width="300"
        Style="{StaticResource WindowStyle}">

    <Border
        Style="{StaticResource ContentBorder}"
        Background="{StaticResource BackgroundBrush}"
        BorderBrush="{StaticResource SelectedTabBackgroundBrush}" 
        Margin="20" Padding="40, 15">

        <StackPanel>
            <TextBlock Margin="0,10" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" Text="Settings" />
            
            <StackPanel Margin="0,5"  Orientation="Horizontal">
                <TextBlock FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Left" Text="Sound notifications" />
                <CheckBox Margin="50,0,0,0" IsChecked="{Binding SettingsData.SoundNotifications, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}"></CheckBox>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
