<Window x:Class="DesktopCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DesktopCS.Controls"
        Title="MainWindow" Height="350" Width="550" MinHeight="350" MinWidth="550"
        Background="#212226">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <TabControl Margin="5,5,5,0" MinHeight="250">
                <controls:CSTabItem Header="#Coldstorm">
                
                </controls:CSTabItem>
                <controls:CSTabItem Header="#2" Unread="True">

                </controls:CSTabItem>

            </TabControl>
            <TextBox  Margin="5" TextWrapping="Wrap" Grid.Row="1" />
        </Grid>
    </ScrollViewer>
</Window>
