<Window x:Class="DesktopCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DesktopCS.Controls" xmlns:behaviors="clr-namespace:DesktopCS.Behaviors"
        Title="MainWindow" Height="350" Width="550" MinHeight="350" MinWidth="550"
        Style="{StaticResource WindowStyle}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TabControl Margin="5,5,5,0" MinHeight="150">
                <controls:CSTabItem Header="#Coldstorm">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" >
                        <RichTextBox Background="Transparent" Foreground="{StaticResource ChatBrush}" BorderThickness="0" Margin="0" IsReadOnly="True" >

                        <FlowDocument behaviors:FlowDocumentPagePadding.PagePadding="0">
                            <Paragraph>
                                <Span Foreground="{StaticResource TimeBrush}">[20:13]</Span>
                                <Span Foreground="#C0FFEE">Processor</Span> Hello
                            </Paragraph>
                            
                                
                        </FlowDocument>
                               
                    </RichTextBox>
                    </ScrollViewer> 
                    
                </controls:CSTabItem>
                <controls:CSTabItem Header="#2" Unread="True">

                </controls:CSTabItem>
            </TabControl>


        <ScrollViewer VerticalScrollBarVisibility="Auto"  Grid.Row="1" Margin="5">
            
            <TextBox SpellCheck.IsEnabled="True" Language="en" TextWrapping="Wrap" />
        </ScrollViewer>
            
            <TextBox Grid.Column="2" Margin="0,26,5,5" Text="USERLIST HERE" Grid.RowSpan="2"  />

        </Grid>
    
</Window>
