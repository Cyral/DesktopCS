<Window x:Class="DesktopCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DesktopCS.Controls"
        Title="MainWindow" Height="350" Width="550" MinHeight="350" MinWidth="550"
        Style="{StaticResource WindowStyle}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <TabControl Margin="5,5,5,0" MinHeight="150">
                <controls:CSTabItem Header="#Coldstorm">
                    <RichTextBox Background="Transparent" Foreground="{StaticResource ChatBrush}" BorderThickness="0" Margin="0,0,0,0"  IsReadOnly="True" Width="590" >
                        <FlowDocument>
                            <Paragraph>
                                dsfafasdafdafd
                            </Paragraph>
                            <Paragraph>
                                <Span Foreground="{StaticResource TimeBrush}">[20:13]</Span>
                                <Span Foreground="#C0FFEE">Processor</Span> Hello
                            </Paragraph>
                            <Paragraph>
                                <Span Foreground="{StaticResource TimeBrush}">[20:13]</Span>
                                <Span Foreground="#C0FFEE">Processor</Span> Hello
                            </Paragraph>
                                
                   
                        </FlowDocument>
                    </RichTextBox>
                </controls:CSTabItem>
                <controls:CSTabItem Header="#2" Unread="True">

                </controls:CSTabItem>
                

            </TabControl>
            <TextBox SpellCheck.IsEnabled="True" Language="en" Margin="5" TextWrapping="Wrap" Grid.Row="1" />
            <TextBox Grid.Column="2" Margin="0,26,5,5" Text="USERLIST HERE" Grid.RowSpan="2"  />

        </Grid>
    </ScrollViewer>
</Window>
